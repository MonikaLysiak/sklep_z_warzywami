@model SklepZWarzywami.Models.DbModels.Zakup

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Zakup</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Sprzedawca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sprzedawca.Imie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ZakupId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<table class="table">
    <tr>
        <th>
            Warzywo
        </th>
        <th>
            Waga
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ZakupyJednostkowe)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Warzywo.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zakup.ZakupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Waga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
        </tr>
    }

</table>